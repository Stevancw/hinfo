// create a new element
var elementToBeAdded = "<%= escape_javascript( render :partial => "shared/link", :locals => { :link => @link }) %>"

// append it to the topic links
$("#topic_<%= @link.topic_id %>_links").append(elementToBeAdded);

// fadeOut the div containing the form
$("#topic_<%= @link.topic_id %>_form").fadeOut();

// get rid of the no-links message
$("#topic_<%= @link.topic_id %>_no_link_message").hide();



