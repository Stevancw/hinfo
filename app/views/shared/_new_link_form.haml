%div{id: "topic_#{topic.id}_form"}
	%h6 Add a link
	= form_for(Link.new(:topic_id => topic.id), :remote => true, html: {class: "form-inline well", id: "topic_#{topic.id}_form"} )   do |f|
		= f.hidden_field :topic_id
		= f.text_field :name, placeholder: "Name", id: "topic_#{topic.id}_link_name"
		= f.text_field :path, placeholder: "Link", id: "topic_#{topic.id}_link_path"
		= f.submit "Submit", class: "btn"